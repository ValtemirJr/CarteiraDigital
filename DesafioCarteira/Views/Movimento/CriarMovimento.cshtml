@model MovimentoViewModel

@{
    ViewData["Title"] = "Criar Movimento";
    int id = ViewBag.Id == null ? Model.PessoaId : ViewBag.Id;
}

<h1>Novo Movimento para @ViewBag.Nome</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CriarMovimento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PessoaId" value="@id" type="hidden" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="TipoMovimento" name="TipoMovimento" id="entrada" value="true">
                <label class="form-check-label" for="entrada">Entrada</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="TipoMovimento" name="TipoMovimento" id="saida" value="false">
                <label class="form-check-label" for="saida">Saida</label>
            </div>

            <div class="form-group">
                <br />
                <input type="submit" value="Concluir" class="btn btn-outline-info btn-sm mr-1" />
                <a asp-controller="Pessoa" asp-action="Lista">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
